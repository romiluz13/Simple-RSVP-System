# Required: MongoDB Connection
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?retryWrites=true&w=majority

# Required: Event Details
NEXT_PUBLIC_EVENT_TITLE="You're Invited!"
NEXT_PUBLIC_EVENT_DATE="2024-12-31"
NEXT_PUBLIC_EVENT_TIME="18:00"
NEXT_PUBLIC_VENUE_NAME="Your Venue Name"
NEXT_PUBLIC_VENUE_ADDRESS="Venue Address"

# Required: Email Configuration (SendGrid)
# Get your API key from https://sendgrid.com
SENDGRID_API_KEY=your_sendgrid_api_key
# Must be a verified sender in SendGrid
FROM_EMAIL=your_verified_sender@example.com
# Where to send RSVP notifications
NOTIFICATION_EMAIL=event_notifications@example.com

# Required: Admin Panel Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
ADMIN_EMAIL=admin@yourdomain.com
# Optional: Set maximum number of failed login attempts
MAX_LOGIN_ATTEMPTS=5
# Optional: Session timeout in minutes
ADMIN_SESSION_TIMEOUT=60

# Required: Reminder System
# Generate a secure random string for this value
REMINDER_API_SECRET=your_secure_random_string

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Note: Replace all placeholder values with your actual event details
# Variables prefixed with NEXT_PUBLIC_ are accessible in the browser
# Keep your admin credentials secure and use strong passwords

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000 